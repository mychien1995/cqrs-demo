@model CQRSDemo.Models.ProductModel

@using (Html.BeginForm("Update", "Products", FormMethod.Post))
{
    <div class="form-group">
        <label>Product Name</label>
        @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Product Description</label>
        @Html.TextBoxFor(x => x.ProductDescription, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Product Brand</label>
        @Html.TextBoxFor(x => x.ProductBrand, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Product Color</label>
        @Html.TextBoxFor(x => x.ProductType, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Product Categories</label>
        @Html.TextBoxFor(x => x.ProductCategory, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Product Price</label>
        @Html.TextBoxFor(x => x.ProductPrice, new { @class = "form-control" })
    </div>
    <button type="submit">Submit</button>
}